<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.starbucks.dao.BoardDao">

    <select id="findAll">
        select * from starbugs_board
    </select>

    <insert id="save" parameterType="com.example.starbucks.dto.BoardDto">
        insert into starbugs_board values (default, #{boardTitle}, #{boardContent},#{boardWriter}, 0, now() );
    </insert>

    <select id="find" parameterType="int" resultType="com.example.starbucks.dto.BoardDto">
        select * from starbugs_board where board_id = ${boardId};
    </select>

    <update id="update" parameterType="com.example.starbucks.dto.BoardDto">
        update starbugs_board set board_title = #{boardTitle}, board_content = #{boardContent} where board_id = #{boardId};
    </update>

    <delete id="delete" parameterType="int">
        delete from starbugs_board where board_id = ${boardId};
    </delete>


</mapper>